{
    "apiVersion": "v1",
    "kind": "Template",
    "labels": {
        "application": "certmgr",
        "createdBy": "certmgr-app-template"
    },
    "metadata": {
        "annotations": {
            "description": "Builds and deploys the certMgr application from a git repository with a Dockerfile and an existing, base image stream",
            "iconClass": "icon-golang",
            "tags": "builder, golang"
        },
        "name": "certmgr-app-template"
    },
    "objects": [
        {
            "apiVersion": "v1",
            "kind": "BuildConfig",
            "metadata": {
                "name": "${APPLICATION}"
            },
            "spec": {
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION}:latest"
                    }
                },
                "resources": {},
                "source": {
                    "contextDir": "${CONTEXT_DIR}",
                    "git": {
                        "ref": "${GIT_REF}",
                        "uri": "${GIT_URI}"
                    },
                    "type": "Git"
                },
                "strategy": {
                    "customStrategy": {
                        "env": [
                            { "name": "BUILD_LOGLEVEL", "value": "5" }
                        ],
                        "exposeDockerSocket": true,
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "golang:latest",
                            "namespace": ""
                        }
                    },
                    "type": "custom"
                },
                "triggers": [
                    {
                        "github": {
                            "secret": "${GITHUB_TRIGGER_SECRET}"
                        },
                        "type": "GitHub"
                    },
                    {
                        "generic": {
                            "secret": "${GENERIC_TRIGGER_SECRET}"
                        },
                        "type": "Generic"
                    },
                    {
                        "imageChange": {},
                        "type": "ImageChange"
                    }
                ]
            }
        },
        {
            "apiVersion": "v1",
            "kind": "ImageStream",
            "metadata": {
                "name": "${APPLICATION}"
            },
            "spec": {
                "dockerImageRepository": "",
                "tags": [
                    {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "${APPLICATION}:latest"
                        },
                        "name": "latest"
                    }
                ]
            }
        },
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "name": "${APPLICATION}-backend"
            },
            "spec": {
                "ports": [
                    {
                        "name": "${APPLICATION}-http",
                        "port": 50051,
                        "targetPort": 50051
                    }
                ],
                "selector": {
                    "deploymentconfig": "${APPLICATION}-backend"
                },
                "sessionAffinity": "None",
                "type": "ClusterIP"
            }
        },
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "name": "${APPLICATION}-auth-backend"
            },
            "spec": {
                "ports": [
                    {
                        "name": "${APPLICATION}-grpc",
                        "port": 50051,
                        "targetPort": 50051
                    }
                ],
                "selector": {
                    "deploymentconfig": "${APPLICATION}-auth-backend"
                },
                "sessionAffinity": "None",
                "type": "ClusterIP"
            }
        },
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "name": "${APPLICATION}"
            },
            "spec": {
                "ports": [
                    {
                        "name": "${APPLICATION}-http",
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "deploymentconfig": "${APPLICATION}-frontend"
                },
                "sessionAffinity": "None",
                "type": "ClusterIP"
            }
        },
        {
            "apiVersion": "v1",
            "kind": "DeploymentConfig",
            "metadata": {
                "name": "${APPLICATION}-backend"
            },
            "spec": {
                "replicas": 1,
                "selector": {
                    "deploymentconfig": "${APPLICATION}-backend"
                },
                "strategy": {
                    "resources": {},
                    "rollingParams": {
                        "intervalSeconds": 1,
                        "timeoutSeconds": 600,
                        "updatePeriodSeconds": 1
                    },
                    "type": "Rolling"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "deploymentconfig": "${APPLICATION}-backend"
                        }
                    },
                    "spec": {
                        "volumes": [
                            {
                                "name":"keys",
                                "secret": { "secretName": "certmgrkeys" }
                            },
                            {
                                "name":"tmp",
                                "emptyDir": {}
                            }
                        ],
                        "containers": [
                            {
                                "image": "${APPLICATION}",
                                "args" : [ "backend",
                                    "--config=http://configserver/master/backend-prod.yaml",
                                    "--caKey=/keys/ca-key.pem"
                                ],
                                "imagePullPolicy": "IfNotPresent",
                                "livenessProbe": {
                                    "initialDelaySeconds": 30,
                                    "tcpSocket": {
                                        "port": 8443
                                    },
                                    "timeoutSeconds": 1
                                },
                                "name": "${APPLICATION}",
                                "ports": [
                                    {
                                        "containerPort": 8443,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "containerPort": 50051,
                                        "protocol": "TCP"
                                    }
                                ],
                                "volumeMounts": [
                                    {
                                        "name": "keys",
                                        "readOnly": true,
                                        "mountPath": "/keys"
                                    },
                                    {
                                        "name": "tmp",
                                        "mountPath": "/tmp"
                                    }
                                ],
                                "readinessProbe": {
                                    "httpGet": {
                                        "scheme": "HTTP",
                                        "path": "/healthz",
                                        "port": 8443
                                    },
                                    "initialDelaySeconds": 3,
                                    "timeoutSeconds": 1
                                },
                                "resources": {},
                                "securityContext": {
                                    "capabilities": {},
                                    "privileged": false
                                },
                                "terminationMessagePath": "/dev/termination-log"
                            }
                        ],
                        "dnsPolicy": "ClusterFirst",
                        "restartPolicy": "Always"
                    }
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${APPLICATION}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${APPLICATION}:latest"
                            }
                        },
                        "type": "ImageChange"
                    }
                ]
            }
        },
        {
            "apiVersion": "v1",
            "kind": "DeploymentConfig",
            "metadata": {
                "name": "${APPLICATION}-frontend"
            },
            "spec": {
                "replicas": 0,
                "selector": {
                    "deploymentconfig": "${APPLICATION}-frontend"
                },
                "strategy": {
                    "resources": {},
                    "rollingParams": {
                        "intervalSeconds": 1,
                        "timeoutSeconds": 600,
                        "updatePeriodSeconds": 1
                    },
                    "type": "Rolling"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "deploymentconfig": "${APPLICATION}-frontend"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "image": "${APPLICATION}",
                                "args": [ "frontend", "--grpc=gss-backend:50051", "--auth=${APPLICATION}-auth-backend:50051" ],
                                "imagePullPolicy": "IfNotPresent",
                                "livenessProbe": {
                                    "initialDelaySeconds": 30,
                                    "tcpSocket": {
                                        "port": 8080
                                    },
                                    "timeoutSeconds": 1
                                },
                                "name": "${APPLICATION}",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "readinessProbe": {
                                    "httpGet": {
                                        "path": "/healthz",
                                        "port": 8080
                                    },
                                    "initialDelaySeconds": 3,
                                    "timeoutSeconds": 1
                                },
                                "resources": {},
                                "securityContext": {
                                    "capabilities": {},
                                    "privileged": false
                                },
                                "terminationMessagePath": "/dev/termination-log"
                            }
                        ],
                        "dnsPolicy": "ClusterFirst",
                        "restartPolicy": "Always"
                    }
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${APPLICATION}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${APPLICATION}:latest"
                            }
                        },
                        "type": "ImageChange"
                    }
                ]
            }
        },
        {
            "apiVersion": "v1",
            "kind": "DeploymentConfig",
            "metadata": {
                "name": "${APPLICATION}-auth-backend"
            },
            "spec": {
                "replicas": 0,
                "selector": {
                    "deploymentconfig": "${APPLICATION}-auth-backend"
                },
                "strategy": {
                    "resources": {},
                    "rollingParams": {
                        "intervalSeconds": 1,
                        "timeoutSeconds": 600,
                        "updatePeriodSeconds": 1
                    },
                    "type": "Rolling"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "deploymentconfig": "${APPLICATION}-auth-backend"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "image": "${APPLICATION}",
                                "args": [ "authService", "--auth=:50051" ],
                                "imagePullPolicy": "IfNotPresent",
                                "livenessProbe": {
                                    "initialDelaySeconds": 30,
                                    "tcpSocket": {
                                        "port": 8080
                                    },
                                    "timeoutSeconds": 1
                                },
                                "name": "${APPLICATION}",
                                "ports": [
                                    {
                                        "containerPort": 50051,
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": {},
                                "securityContext": {
                                    "capabilities": {},
                                    "privileged": false
                                },
                                "terminationMessagePath": "/dev/termination-log"
                            }
                        ],
                        "dnsPolicy": "ClusterFirst",
                        "restartPolicy": "Always"
                    }
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${APPLICATION}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${APPLICATION}:latest"
                            }
                        },
                        "type": "ImageChange"
                    }
                ]
            }
        }
    ],
    "parameters": [
        {
            "description": "The name for the new application.",
            "displayName": "Application Name",
            "name": "APPLICATION",
            "reqired": true,
            "value": ""
        },
        {
            "description": "The name:tag of the existing, base imagestream upon which this new imagestream builds.",
            "displayName": "Base Imagestream Name",
            "name": "BASE_IMAGESTREAM",
            "required": true,
            "value": "centos:7"
        },
        {
            "description": "Git source URI for application",
            "name": "GIT_URI",
            "value": "https://github.com/mchudgins/jeeves.git"
        },
        {
            "description": "Git branch/tag reference",
            "name": "GIT_REF",
            "value": "master"
        },
        {
            "description": "Git Directory",
            "name": "CONTEXT_DIR",
            "value": "/"
        },
        {
            "description": "Github trigger secret",
            "from": "[a-zA-Z0-9]{8}",
            "generate": "expression",
            "name": "GITHUB_TRIGGER_SECRET"
        },
        {
            "description": "Generic build trigger secret",
            "from": "[a-zA-Z0-9]{8}",
            "generate": "expression",
            "name": "GENERIC_TRIGGER_SECRET"
        }
    ]
}
